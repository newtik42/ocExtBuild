{{ header }}{{ column_left }}{% import "extension/extension/tool/macros.twig" as forms %}

<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="panel panel-default panel-heading pull-right" style="position: fixed;right: 20px;z-index: 9999;">

                {% if not eula %}

                    {{ forms.onoffswitch('setting_status',setting.status) }}

                    <div class="btn-group">

                        <button but_save type="button" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="{{ text_button_save }}"
                                onclick='if (validateAjax()) {saveAjax();}'>
                            <i class="fa fa-save"></i>
                        </button>

                        <button module_menu_setting_button
                                type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only"></span>
                        </button>

                        <ul class="dropdown-menu dropdown-menu-right" module_menu_setting_li disabled=''>
                            <li><a href="{{ href.setting_basic }}" style="cursor: pointer;"><i class="fa fa-cloud-download fa-fw" aria-hidden="true"></i> 
                                    {{ text_setting_basic }}</a></li>
                            <li><a href="{{ href.setting_import }}" style="cursor: pointer;"><i class="fa fa-download fa-fw" aria-hidden="true"></i> 
                                    {{ text_setting_import }}</a></li>
                            <li><a href="{{ href.setting_export }}" target="_blank" style="cursor: pointer;"><i class="fa fa-upload fa-fw" aria-hidden="true"></i> 
                                    {{ text_setting_export }}</a></li>
                        </ul>
                    </div>
                        
                    <button but_save type="button" data-toggle="tooltip" title="" class="btn btn btn-warning"
                            onclick="cacheClearAjax()"
                            data-original-title="{{ text_button_cache_clear }}">
                        <i class="fa fa-eraser"></i>
                    </button>

                {% endif %}

                <a href="{{ href.cancel }}" data-toggle="tooltip" title="{{ text_button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>

            </div>        
            <h1><a href="{{ text_url_site }}" target="_blank">{{ text_COPYRIGTHSHOW }}</a> {{ text_heading_name }}</h1>

            {{ forms.breadcrumbs(breadcrumbs) }}

        </div>
    </div>
    <div class="container-fluid">
        
        <div sys_notification></div>
        
        <div class="alert alert-danger alert-dismissible hide"><i class="fa fa-exclamation-circle"></i>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading"> 

                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_store }}</h3>  

                {{ forms.SelectStores(stores, store_id, module.path) }}

                {{ checkUpDateModule }}

            </div>
            <div class="panel-body">

                <form action="{{ href.action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">                    
                    {% if eula %} {{ eula }} {%  else %}

                        <input type="hidden" name="apply" value="0"/>
                        <input type="hidden" name="setting[status]" value="{{ setting.status }}"/>
                        <ul nttabs class="nav nav-tabs">
                            <li class="active"><a href="#tab-general" data-toggle="tab">
                                <i class="fa fa-cogs text-primary"></i> {{ text_tab_general }}</a>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane active" id="tab-general">

                            </div>
                        </div>  
                    {% endif %}
                </form>
            </div>
            <div class="zamanuha">
                <center> {{ text_zamanuha }} {{ text_COPYRIGTHSHOWLINK }}!</center>
            </div>
        </div>
    </div>
</div>
<script>
    var sys_module_code = 'newtik_tab_{{ module.code }}';
</script>
{{ forms.onoffswitchStyle() }}
<style>
    .disabled {
        pointer-events: none;
        cursor: default;
    }
    #newsNotification {
        color:green;
        opacity:1
    }
    @media (min-width: 768px){
        .form-horizontal .tab-content div div:nth-child(1) .control-label {
            padding-top: 4px;
        }
    }
    #content > div.page-header > div > div.panel.panel-default.panel-heading{
        display: flex;
        align-items: center;
    }
    #content > div.page-header > div > div.panel.panel-default.panel-heading.pull-right > * {
        margin: 0 5px;
    }
    @media (min-width: 768px){
        .form-horizontal .tab-content div div:nth-child(1) .control-label {
            padding-top: 4px;
        }
    }
    .zamanuha{
        background: #233746;
        color: #ffffff;
        font-size: 130%;
        padding: 10px;
        border-color: #233746;
        border-radius: 3px;
        margin-top: 20px;
    }
    #content > div.page-header > div > h1 > a > svg,.zamanuha > svg{
        height: 19px;
    }
</style>
{{ footer }}
