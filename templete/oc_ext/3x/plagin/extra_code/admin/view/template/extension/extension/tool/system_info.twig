<div class="form-group required">
    <label class="col-sm-2 control-label">license </label>
    <div class="col-sm-10">
        <input type="text"class="form-control" value="{{ license }}" readonly="">
    </div>

</div>

{% if triggers %}
    
    <table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td class="text-left"></td>
            <td class="text-left"></td>
            <td class="text-right"></td>
            <td class="text-right"></td> 
        </tr>
    </thead>
    <tbody>
    {% for trigger in triggers %}
        <tr>
            <td class="text-left">{{ trigger.code }}</td>
            <td class="text-left">{{ trigger.trigger }}</td>
            <td class="text-left">{{ trigger.action }}</td>
            <td class="text-left">
                status
            </td>
            
        </tr>
    {% endfor %}
    </tbody>
</table>
    
{% endif %}

{% if seo_urls %}
    
    <table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td class="text-left">{{ text_query }}</td>
            <td class="text-left">{{ text_keyword }}</td>
            <td class="text-right">{{ text_store_id }}</td>
            <td class="text-right">{{ text_language_id }}</td> 
        </tr>
    </thead>
    <tbody>
    {% for seourl in seo_urls %}
        <tr>
            <td class="text-left">{{ seourl.query }}</td>
            <td class="text-left">{{ seourl.keyword }}</td>
            <td class="text-left">{{ seourl.store_id }}</td>
            <td class="text-left">{{ seourl.language_id }}</td>            
        </tr>
    {% endfor %}
    </tbody>
</table>
    
{% endif %}

{% if check_db.tables %}
    
    <table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td class="text-left">{{ text_table_name }}</td>
            <td class="text-left">{{ text_check }}</td>
        </tr>
    </thead>
    <tbody>
    {% for table,check in check_db.tables %}
        <tr>
            <td class="text-left">{{ table }}</td>
            <td class="text-left">{{ check }}</td>         
        </tr>
    {% endfor %}
    </tbody>
</table>
    
{% endif %}

{% if check_db.table_columns %}
    
    <table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td class="text-left">{{ text_table_name }}table</td>
            <td class="text-left">{{ text_table_name }}column</td>
            <td class="text-left">{{ text_check }}</td>
        </tr>
    </thead>
    <tbody>
    {% for table,columns in check_db.table_columns %}
        <tr>
            <td class="text-left">{{ table }}</td>
            {% for column,check in columns %}
            <td class="text-left">{{ column }}</td> 
            <td class="text-right">{{ check?'є':"відсутнє" }}</td> 
            {% endfor %}
        </tr>
    {% endfor %}
    </tbody>
</table>
    
{% endif %}

